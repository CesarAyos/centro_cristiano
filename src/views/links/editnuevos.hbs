<main>
  <div class="container d-flex justify-content-center mt-3 mb-3">
    <div
      class="card bg-body-secondary"
      style="width: 70rem; box-shadow: 10px 10px 5px 0px rgba(54,130,123,0.75);"
    >
      <div class="d-flex justify-content-center m-2">
        <img src="/img/logo.png" alt="logo" class="logo-form" />
      </div>
      <h2 class="d-flex justify-content-center m-2">REPORTE DE PERSONAS NUEVAS</h2>
      <div class="card-body" style="background-color: rgb(0, 109, 98);">
        <form action="/links/planilla" method="POST" class="row g-3">
          <div class="form-group col-md-6">
            <label class="form-label h3">Nombre del Lider</label>
            <input
              type="text"
              value="{{nuevos.nombrelidernuevo}}"
              class="form-control"
              name="nombrelidernuevo"
              placeholder="Nombre del lider"
              required
            />
          </div>
          <div class="form-group col-md-6">
            <label class="form-label h3">Nombre del grupo biblico al que asiste</label>
            <input
              type="text"
              value="{{nuevos.nombregruponuevo}}"
              class="form-control"
              name="nombregruponuevo"
              placeholder="Nombre del grupo Biblco"
              required
            />
          </div>
          <div class="form-group col-6">
            <label class="form-label h3">Nombres</label>
            <input
              type="text"
              value="{{nuevos.nombresnuevo}}"
              class="form-control"
              name="nombresnuevo"
              placeholder="Nombre de la persona nueva"
              required
            />
          </div>
          <div class="form-group col-md-6">
            <label class="form-label h3">Apellidos</label>
            <input
              type="text"
              value="{{nuevos.apellidosnuevo}}"
              class="form-control"
              name="apellidosnuevo"
              placeholder="Apellido de la persona nueva"
              required
            />
          </div>

          <div class="form-group col-md-12">
            <label class="form-label h3">Direccion, Casa , Calle</label>
            <input
              type="text"
              value="{{nuevos.direccionnuevo}}"
              class="form-control"
              name="direccionnuevo"
              placeholder="Direccion donde vive la persona nueva"
              required
            />
          </div>
          <div class="form-group col-6">
            <label class="form-label h3">Edad</label>
            <input
              type="text"
              value="{{nuevos.edadnuevo}}"
              class="form-control"
              name="edadnuevo"
              placeholder="edad de la persona nueva"
              required
            />
          </div>
          <div class="form-group col-6">
            <label class="form-label h3">Numero Telefonico</label>
            <input
              type="text"
              value="{{nuevos.telefononuevo}}"
              class="form-control"
              name="telefononuevo"
              placeholder="Numero de telefono de la persona nueva"
              required
            />
          </div>

          <div class="col-12 d-flex mt-4 justify-content-center m">
            <form action="/planilla">
              <button type="submit" class="btn btn-primary btn-lg">Enviar
                reporte</button>
            </form>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>