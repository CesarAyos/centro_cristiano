<h1>Novedades</h1>

<div class="container p-4">
    <div class="row d-flex flex-column-reverse">
        {{!-- Aquí estamos iterando sobre cada evento en la variable "eventos" --}}
        {{#each eventos}}
            <div class="card border-success m-3" style="max-width: 18rem;">
                <div class="card-header bg-transparent border-success">{{Dia}}</div>
                <div class="card-body text-success">
                    <h5 class="card-title">{{descripcion}}</h5>
                    <p class="card-text">{{fecha}}</p>
                </div>
                <div class="card-footer bg-transparent border-success">{{Fecha}},{{Hora}}</div>
                <li class="btn btn-success m-2">
                    <a href="/links/delete/{{id}}" class="text-light text-decoration-none">Eliminar</a>
                </li>
            </div>
        {{!-- Si no hay eventos, se muestra este mensaje --}}
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card car-body text-center">
                    <p>Sin Eventos Creados</p>
                </div>
            </div>
        {{/each}}
    </div>
</div>


