<form action="/links/profile" class="btn-group dropup btn-float fs-2 m-2" style="left: 5px;">
  <button class="fa-solid fa-house fa-flip bg-transparent" style="border: none;color: rgb(231, 14, 14);" ></button>
</form>


<main>
  <div class="container d-flex justify-content-center mt-5 mb-5">
    <div
      class="card bg-body-secondary"
      style="width: 70rem; box-shadow: 10px 10px 5px 0px rgba(54,130,123,0.75);"
    >
      <div class="d-flex justify-content-center m-2">
        <img src="/img/logo.png" alt="logo" class="logo-form" />
      </div>
      <h2 class="d-flex justify-content-center m-2">REPORTES DE AMIGOS</h2>
      <div class="card-body" style="background-color: rgb(0, 109, 98);">
        <form action="/links/nuevos" method="POST" class="row g-3">
          <div class="form-group col-md-6">
            <input
              type="text"
              class="form-control"
              style="border-bottom: 2px solid #5504f8;"
              name="nombrelidernuevo"
              placeholder="Nombre del lider"
              required
            />
          </div>
          <div class="form-group col-md-6">
            <input
              type="text"
              class="form-control"
              style="border-bottom: 2px solid #5504f8;"
              name="nombregruponuevo"
              placeholder="Nombre del grupo Biblico"
              required
            />
          </div>
          <div class="form-group col-6">
            <input
              type="text"
              class="form-control"
              style="border-bottom: 2px solid #5504f8;"
              name="nombresnuevo"
              placeholder="Nombre de la persona nueva"
              required
            />
          </div>
          <div class="form-group col-md-6">
            <input
              type="text"
              class="form-control"
              style="border-bottom: 2px solid #5504f8;"
              name="apellidosnuevo"
              placeholder="Apellido de la persona nueva"
              required
            />
          </div>

          <div class="form-group col-md-12">
            <input
              type="text"
              class="form-control"
              style="border-bottom: 2px solid #5504f8;"
              name="direccionnuevo"
              placeholder="Direccion donde vive la persona nueva"
              required
            />
          </div>
          <div class="form-group col-6">
            <input
              type="text"
              class="form-control"
              style="border-bottom: 2px solid #5504f8;"
              name="edadnuevo"
              placeholder="edad de la persona nueva"
              required
            />
          </div>
          <div class="form-group col-6">
            <input
              type="text"
              class="form-control"
              style="border-bottom: 2px solid #5504f8;"
              name="telefononuevo"
              placeholder="Numero de telefono de la persona nueva"
              required
            />
          </div>

          <div class="col-12 d-flex mt-4 justify-content-center m">
            <form action="/nuevos">
              <button type="submit" class="btn btn-primary btn-lg">Enviar
                reporte</button>
            </form>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>