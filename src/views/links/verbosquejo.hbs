<form action="/links/profile" class="btn-group dropup btn-float fs-2 m-2" style="left: 5px;">
  <button class="fa-solid fa-house fa-flip bg-transparent" style="border: none;color: rgb(231, 14, 14);" ></button>
</form>


<div class="row m-4 p-4">
{{#each imagenes}}

<form class="col-md-4 mb-5">
  <div class="card" style="width: 20rem;">
  <img src="/links/imagen/{{id}}" alt="bosquejo" style="width: 20rem;">
  <div class="card p-2">
    <button class="btn btn-primary">
    <a href="/links/imagen/{{id}}" 
    download="{{id}}" 
    class=" text-white text-decoration-none"
    >Descargar</a>
    </button>
    <p class="text-danger">{{created_at}}: fecha</p>
    <button class="btn btn-success btn-lg">
                <a href="/links/delete/{{id}}" class="text-light text-decoration-none">Eliminar</a>
            </button>
  </div>
</div>
</form>

{{else}}

  <h2>no hay bosquejo</h2>

{{/each}}
</div>